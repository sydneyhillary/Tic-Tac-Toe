            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bod3"
            android:textSize="100sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/b7"
            style="@style/buttonO"
            android:layout_width="match_parent"
